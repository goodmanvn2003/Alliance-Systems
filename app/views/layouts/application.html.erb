<!DOCTYPE html>
<html ng-app="ngSanitize">
<head>
  <meta name="description" content="<%= @appDescription.nil? ? '' : @appDescription.strip %>">
  <%
  	if (!@metas.nil?) 
  		@metas.each do |m| %>
  	<%= m.to_s.html_safe %>
  <% 	end 
	end
  %>	
  
  <% 
  	if (!@css.nil?)
  		@css.each do |c| %>
  	<%= stylesheet_link_tag c.html_safe %>
  <% 
  		end
  	end   
  %>
  <%= javascript_include_tag "manager/jquery-1.9.1.min" %>
  <%= javascript_include_tag "manager/angular.min" %>
  <%= javascript_include_tag "manager/angular-sanitize.min" %>
  <%= javascript_include_tag "manager/modernizr.min" %>
  <% 
  	if (!@js.nil?)
  		@js.each do |j| %>
  	<%= javascript_include_tag j.html_safe %>
  <% 
  		end 
	end
  %>
  <title><%= @appName.nil? ? '' : @appName.strip %></title>
  <!--<%= csrf_meta_tags %>-->
</head>
<body>
<div style="color:white;">
  <%= flash[:systemWarning].nil? ? '' : flash[:systemWarning].html_safe %>
</div>

<!-- NO-SCRIPT WARNING -->
<noscript>
  <div id="noscript-overlay" style="position:fixed;top:0;right:0;background:black;bottom:0;left:0;z-index:9999;">
    <div style="display:block;position:fixed;top:48%;left:41%;right:41%;bottom:48%;text-align:center;color:white;">
      <div style="font-size:24px;margin:16px;">We say:</div>
      <blockquote style="color:white;">Javascript is required; please activate it!</blockquote>
    </div>
  </div>
</noscript>
<!-- END -->

<%= yield %>

</body>
</html>
